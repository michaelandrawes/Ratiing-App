<%layout('layout2') %>

<div id="wrapper">

  <% include ../partials/sidebar %>
  <div id="page-content-wrapper">

      <% include ../partials/navbar %>
      <div class="container-fluid main_body">
        <div class="ul_links">
          <ul>
            <li ><a  href="/home">Home</a></li> |
            <li ><a  href="/companies">Reviews</a></li>|
            <li ><a  href="">Write Review</a></li>
          </ul>
        </div>

        <div class="bodyDiv">
          <h4 style="">Write Review</h4>

          <%if(hasMsg){%>
            <div class="alert alert-success">
              <%=msg%>
            </div>
          <%}%>

          <form  action="" method="post">
            <input type="hidden" class="form-control"id="id"  value="<%=data._id%>">
            <div class="form-group">
              <label for="">From</label>
              <input type="text" id="sender"class="form-control" name="sender"style="margin-bottom:20px;" value="<%=user.fullname%>" readonly>
            </div>
            <div class="form-group">
              <label for="">Receiving Company</label>
              <input type="text"id="receiver"class="form-control" name="receiver"style="margin-bottom:20px;" value="<%=data.name%>" readonly>
            </div>
            <div class="form-group">
                <label for="">Rating</label>
                <div class="col-sm-12" id="star_rating">
                  <img src="/images/star_off.png"id="1_star"alt="1" title="Bad">
                  <img src="/images/star_off.png"id="2_star"alt="2" title="Poor">
                  <img src="/images/star_off.png"id="3_star"alt="3" title="Fair">
                  <img src="/images/star_off.png"id="4_star"alt="4" title="Good">
                  <img src="/images/star_off.png"id="5_star"alt="5" title="Excellent">

                  <span id="showTitle"></span>
                </div>
            </div>
            <div class="form-group">
              <label for="">Review</label>
              <textarea name="review" id="review" rows="8" cols="80" class="form-control"></textarea>
            </div>
            <div class="form-group">
              <input type="submit" name="rate" value="Create" style="" id="rate" class="form-control btn btn-primary">
            </div>
          </form>
        </div>
      </div>
      <% include ../partials/footer %>
  </div>
</div>
