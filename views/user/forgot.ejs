<%layout('layout') %>



<div class="container">
    <br><br>
    <div class="text-center reg_msg wow bounceInDown">
        <h1><a href="/">October360</a></h1>
    </div>
   <br><br>

   <div class="banner-title text-center reg_msg wow swing">
        <h2 class="fancy"><span>Enter Your Email</span></h2>
   </div><br>
   <p class="text-center wow flash">Please enter your email and a password reset link will be sent. </p>

    <div class="row signup">
      <%if(hasErrors){ %>
          <%for(var i=0;i< messages.length;i++){%>
            <div class="alert alert-danger">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">
                 &#10007;
              </a>
              <%=messages[i]%>
            </div>
          <%}%>
      <% }%>

      <%if(noErrors){ %>
            <div class="alert alert-info">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">
                 &#10007;
              </a>
              <%=info%>
            </div>
          <%}%>


        <form method="POST"  action="/forgot" class="wow lightSpeedIn">
            <div class="form-group input_group">
                <input id="email" class="form-control" name="email" type="text" autocomplete="on" placeholder="EMAIL" style="margin-bottom:20px;">
            </div>

            <div class="form-group">
                <input type="submit" id="submit" value="Send" class="form-control btn btn-primary" name="submit">
            </div>

          </form>
          <div class="wow bounceInUp">
            <h4>Already reset your password?<a href="/login">Login</a></h4>
          </div>
    </div>

</div>
<% include ../partials/footer %>
